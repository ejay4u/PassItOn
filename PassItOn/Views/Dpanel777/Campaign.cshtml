@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#CampaignTable").dataTable({
                ajax: {
                    url: "/api/campaigns",
                    dataSrc: ""
                },
                dom: 'Bfrtip',
                buttons: [
                    'copyHtml5',
                    'excelHtml5',
                    'csvHtml5',
                    'pdfHtml5'
                ],
                columns: [
                    {
                        data: "Id"
                    },
                    {
                        data: "AccountId"
                    },
                    {
                        data: "CampaignTitle"
                    },
                    /*{
                        data: "CampaignCountry"
                    },
                    {
                        data: "CampaignNetwork"
                    },*/
                    {
                        data: "CampaignCodeQty"
                    },
                    {
                        data: "UsageLimit"
                    },
                    {
                        data: "CampaignStatus"
                    },
                    {
                        data: "CampaignPrize"
                    },
                    {
                        data: "CreatedBy"
                    },
                    {
                        data: "TimeCreated",
                        render: function (data, type, campaign) {
                            return new Date(campaign.TimeCreated).toDateString();
                        }
                    },
                    {
                        data: "UpdatedBy"
                    },
                    {
                        data: "TimeUpdated",
                        render: function (data, type, campaign) {
                            return new Date(campaign.TimeUpdated).toDateString();
                        }
                    },
                    {
                        data: "Id",
                        render: function (data, type, campaign) {
                            return "<a title='Details' class='btn btn-sm btn-info' href='/dpanel777/campaigndetails/" +
                                campaign.Id + "'><i class='fa fa-hand-o-left fa-lg' aria-hidden='true'></i></a>" + " | " +
                                "<a title='Edit' class='btn btn-sm btn-primary' href='/dpanel777/editcampaign/" +
                                campaign.Id + "'><i class='fa fa-pencil-square fa-lg' aria-hidden='true'></i></a>" + " | " +
                                "<a title='Delete' href='#' data-id=" + campaign.Id + " class='js-delete btn btn-sm btn-danger'><i class='fa fa-trash fa-lg' aria-hidden='true'></i></a>";
                        }
                    }
                ]
            });

            $('#CampaignTable tfoot th').each(function () {
                var placeHolderTitle = $('#CampaignTable thead th').eq($(this).index()).text();
                $(this).html('<input type="text" class="form-control input input-sm" placeholder = "Search ' + placeHolderTitle + '" />');

                initSearch();
            });

            function initSearch() {
                $('#CampaignTable').dataTable().api().columns().every(function () {
                    var column = this;
                    $(this.footer()).find('input').on('keyup change', function () {
                        column.search(this.value).draw();
                    });
                });
            }

            $('a.showHide').on("click", function (e) {
                e.preventDefault();
                // Get the column API object
                var column = $('#CampaignTable').dataTable().api().column($(this).attr('data-column'));
                // Toggle the visibility
                column.visible(!column.visible());

            });

            $('#CampaignTable tbody').on("click", 'a.js-delete', function () {
                var anchor = $(this);
                bootbox.confirm("Are you sure you want to delete this campaign and all its data?", function (result) {
                    if (result) {
                        var dialog = bootbox.dialog({
                            message: '<p class="text-center"><i class="fa fa-refresh fa-spin"></i> Processing request...</p>',
                            closeButton: false
                        });
                        $.ajax({
                            url: "/api/campaigns/" + anchor.attr("data-id"),
                            method: "DELETE",
                            success: function () {
                                //console.log("success);
                                dialog.modal('hide'); //close the custom dialog
                                $('#CampaignTable').dataTable().api().row(anchor.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        });
    </script>
}
