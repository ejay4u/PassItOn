@using System.Web.UI.WebControls
@using MongoDB.Driver
@model PassItOn.ViewModels.CampaignViewModel

@{
    ViewBag.Title = "Campaign";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
    ViewBag.Description = "Manage All Campaings";
}


@using (Html.BeginForm("Campaign", "Dpanel777"))
{
    @Html.AntiForgeryToken()


    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Create A New Campaign</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
            </div>
        </div>
        <div class="box-body">

            <div class="form-horizontal">
                <asp:Label ID="lblUtr" />
                <div class="form-group">
                    @Html.LabelFor(model => model.BusinessName, new { @class = "control-label col-lg-2" })
                    <div class="col-lg-10">
                        @Html.DropDownListFor(m => m.Campaign.AccountId, Model.BusinessName, "Select Business", new { htmlAttributes = new { @class = "form-control select2", style = "width: 100%" } })
                        @Html.ValidationMessageFor(model => model.Campaign.AccountId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Campaign.CampaignTitle, new { @class = "control-label col-lg-2" })
                    <div class="col-lg-10">
                        @Html.EditorFor(model => model.Campaign.CampaignTitle, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Campaign.CampaignTitle, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Campaign.CampaignCountry, new { @class = "control-label col-lg-2" })
                    <div class="col-lg-10">
                        @Html.ListBoxFor(model => model.Campaign.CampaignCountry, Model.CountryList, new { htmlAttributes = new { @class = "form-control select2", @style = "width: 100%" } })
                        @Html.ValidationMessageFor(model => model.Campaign.CampaignCountry, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Campaign.CampaignNetwork, new { @class = "control-label col-lg-2" })
